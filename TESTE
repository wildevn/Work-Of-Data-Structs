    
#include <iostream>
#include <fstream>

using namespace std;

int main()
{
  // variaveis 
  string a;
  string nome_arq;
  ifstream filearq;
  
  cout << "Entre com o nome do arquivo: \n";
  cin >> nome_arq;
  filearq.open(nome_arq);

  getline(filearq, a);
  int b = a[0]- '0';

  for (int i = 0; i < b; i++)
    cout << "Legal "<< endl;



  filearq.close();

  return 0;
